apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: default-route
spec:
  hosts:
    - c
  http:
    - match:
      - headers:
          version:
            exact: v2
        source_labels:
          version: v1
      route:
      - destination:
          name: c
          subset: v2
        weight: 100
      fault:
        delay:
          percent: 100
          fixedDelay: 5s
        abort:
          percent: 100
          httpStatus: 503
