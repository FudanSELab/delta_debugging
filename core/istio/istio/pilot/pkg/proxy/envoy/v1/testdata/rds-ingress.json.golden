{
  "virtual_hosts": [
   {
    "name": "world.com",
    "domains": [
     "world.com",
     "world.com:80"
    ],
    "routes": [
     {
      "path": "/hello",
      "cluster": "out.world.default.svc.cluster.local|http",
      "timeout_ms": 0,
      "opaque_config": {
       "destination.service": "world.default.svc.cluster.local",
       "mixer_check": "on",
       "mixer_forward": "on",
       "mixer_report": "on"
      },
      "decorator": {
       "operation": "default-route"
      }
     }
    ]
   }
  ]
 }